{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,

        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        /* Debugging Options */
        "traceResolution": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "pretty": true,

        "lib": ["es2017"]
    },
    "include": ["src/**/*", "utils/**/*", "tools/**/*"],
    "exclude": ["dist/**", "node_modules/**", "**/*.spec.ts"],
    "compileOnSave": false,
    "typedocOptions": {
        "name": "@digime/digime-sdk-nodejs",
        "theme": "default",
        "customCss": "typedoc-theme/style.css",
        "entryPoints": ["src/sdk.ts", "src/errors.ts", "src/types.ts"],
        "categorizeByGroup": false,
        "out": "docs",
        "excludeExternals": true,
        "internalModule": "Internal",
        "exclude": "**/*+(index|.spec|.e2e).ts",
        "pluginPages": {
            "pages": [
                {
                    "title": "Guides",
                    "childrenSourceDir": "./guides",
                    "childrenOutputDir": "guides",
                    "children": [
                        {
                            "title": "Getting Started",
                            "source": "start.md"
                        },
                        {
                            "title": "Reading data - Step by step guide",
                            "source": "read-data-overview.md"
                        },
                        {
                            "title": "Pushing data - Step by step guide",
                            "source": "push-data-overview.md"
                        }
                    ],
                    "output": "guides"
                },
                {
                    "title": "Fundamentals",
                    "childrenSourceDir": "./guides",
                    "childrenOutputDir": "fundamentals",
                    "children": [
                        {
                            "title": "Contracts",
                            "source": "contracts.md"
                        },
                        {
                            "title": "Initializing the SDK",
                            "source": "initialise-sdk.md"
                        },
                        {
                            "title": "Getting Available Services",
                            "source": "available-services.md"
                        }
                        ,
                        {
                            "title": "Authorizing",
                            "source": "authorize.md"
                        },
                        {
                            "title": "Onboarding Additional Services",
                            "source": "onboard.md"
                        },
                        {
                            "title": "Sample datasets",
                            "source": "sample-datasets.md"
                        },
                        {
                            "title": "Reauthorizing account",
                            "source": "reauthorize.md"
                        },
                        {
                            "title": "Read accounts",
                            "source": "read-accounts.md"
                        },
                        {
                            "title": "Reading Data",
                            "source": "read.md",
                            "childrenSourceDir": "../guides",
                            "output": "read.html",
                            "children": [
                                {
                                    "title": "File Metadata",
                                    "source": "file-meta.md"
                                }
                            ]
                        },
                        {
                            "title": "Push Data",
                            "source": "push.md"
                        },
                        {
                            "title": "User Access Tokens",
                            "source": "access-token.md"
                        },
                        {
                            "title": "Handling Errors",
                            "source": "handling-errors.md"
                        },
                        {
                            "title": "Example Applications",
                            "source": "example-applications.md"
                        },
                        {
                            "title": "Portability report",
                            "source": "portability-report.md"
                        }
                    ],
                    "output": "fundamentals"
                },
             ],
        }
    },
}
