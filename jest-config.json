{
    "preset": "ts-jest",
    "coverageReporters": [
        "cobertura",
        "lcovonly",
        "text-summary"
    ],
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!**/dev/**",
        "!**/dist/**",
        "!**/*.d.ts"
    ],
    "coverageThreshold": {
        "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
        }
    },
    "testEnvironment": "node",
    "testRunner": "jest-circus/runner"
}
